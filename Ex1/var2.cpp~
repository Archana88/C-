#include<iostream>
using namespace std;
int main()
{
  cout<<"\nThe size of int is "<<sizeof(int)<<" bytes.\n"<<endl; 
  cout<<"The size of short is "<<sizeof(short)<<" bytes.\n"<<endl; 
  cout<<"The size of float is "<<sizeof(float)<<" bytes.\n"<<endl; 
  cout<<"The size of double is "<<sizeof(double)<<" bytes.\n"<<endl;
 
  cout<<"\nThe size of int is "<<sizeof(int)*8<<" bits.\n"<<endl; 
  cout<<"The size of short is "<<sizeof(short)*8<<" bits.\n"<<endl; 
  cout<<"The size of float is "<<sizeof(float)*8<<" bits.\n"<<endl; 
  cout<<"The size of double is "<<sizeof(double)*8<<" bits.\n"<<endl; 
}
